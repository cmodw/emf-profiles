<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.modelversioning.emfprofile.application.registry.ui.extensionpoint.decorator" name="EMF Profile Application Decorator" schema="schema/org.modelversioning.emfprofile.application.registry.ui.extensionpoint.decorator.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="EMF Profile Applications"
            icon="icons/profile.png"
            category="org.modelversioning.emfprofile"
            class="org.modelversioning.emfprofile.application.registry.ui.views.EMFProfileApplicationsView"
            id="org.modelversioning.emfprofile.application.registry.ui.views.EMFProfileApplicationsView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
     <!-- 
     <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="org.modelversioning.emfprofile.application.registry.ui.views.EMFProfileApplicationsView">
         </view>
      </perspectiveExtension> 
      -->
      <perspectiveExtension
            targetID="org.modelversioning.emfprofile.diagram.EMFProfilePerspective">
         <view
               id="org.modelversioning.emfprofile.application.registry.ui.views.EMFProfileApplicationsView"
               minimized="false"
               ratio="0.8f"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.applyloadunload"
            name="Category Apply Load Unload">
      </category>
      <command
            categoryId="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.applyloadunload"
            id="org.modelversioning.emfprofile.application.registry.ui.commands.applyprofile"
            name="Applay Profile">
      </command>
      <command
            categoryId="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.applyloadunload"
            id="org.modelversioning.emfprofile.application.registry.ui.commands.loadprofileapplication"
            name="Load Profile Application">
      </command>
      <command
            categoryId="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.applyloadunload"
            id="org.modelversioning.emfprofile.application.registry.ui.commands.unloadprofileapplication"
            name="Unload Profile Application">
      </command>
      <category
            id="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.tooglebuttons"
            name="Toogle Buttons">
      </category>
      <command
            categoryId="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.tooglebuttons"
            id="org.modelversioning.emfprofile.application.registry.ui.commands.stereotypeapplicationsonelement"
            name="Stereotype Applications on Selected Element">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:true"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
	  <category
            id="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.save"
            name="Save Profile Applications Category">
      </category>
      <command
            categoryId="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.save"
            id="org.modelversioning.emfprofile.application.registry.ui.commands.saveprofileapplication"
            name="Save Profile Application">
      </command>
      <command
            categoryId="org.modelversioning.emfprofile.application.registry.ui.toolbar.category.save"
            id="org.modelversioning.emfprofile.application.registry.ui.commands.saveallprofileapplications"
            name="Save All Profile Applications">
      </command>
      <category
            id="org.modelversioning.emfprofile.application.registry.ui.removeelementscategory"
            name="Remove stereotype applications or nested classes">
      </category>
      <command
            categoryId="org.modelversioning.emfprofile.application.registry.ui.removeelementscategory"
            id="org.modelversioning.emfprofile.application.registry.ui.commands.removestereotypeapplicationornestedclass"
            name="Remove Stereotype Application Or Nested Class">
      </command>
      <command
            id="org.modelversioning.emfprofile.application.registry.ui.commands.showpropertiesview"
            name="Show Properties View">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.modelversioning.emfprofile.application.registry.ui.views.EMFProfileApplicationsView">
         <command
               commandId="org.modelversioning.emfprofile.application.registry.ui.commands.applyprofile"
               icon="icons/new_wiz.gif"
               label="Apply Profile "
               style="push"
               tooltip="Apply Profile">
         </command>
         <separator
               name="org.modelversioning.emfprofile.application.registry.ui.separator1"
               visible="false">
         </separator>
         <command
               commandId="org.modelversioning.emfprofile.application.registry.ui.commands.loadprofileapplication"
               icon="icons/add_obj.gif"
               label="Load Profile Application"
               style="push"
               tooltip="Load Profile Application">
         </command>
         <command
               commandId="org.modelversioning.emfprofile.application.registry.ui.commands.unloadprofileapplication"
               icon="icons/remove_correction.gif"
               label="Unload Profile Application"
               style="push"
               tooltip="Unload Profile Application">
         </command>
         <separator
               name="org.modelversioning.emfprofile.application.registry.ui.separator2"
               visible="true">
         </separator>
         <command
               commandId="org.modelversioning.emfprofile.application.registry.ui.commands.stereotypeapplicationsonelement"
               icon="icons/pin_view.gif"
               label="Pin View with Selected Element"
               style="toggle"
               tooltip="Pin View with Selected Element">
         </command>
         <separator
               name="org.modelversioning.emfprofile.application.registry.ui.separator3"
               visible="true">
         </separator>
         <command
               commandId="org.modelversioning.emfprofile.application.registry.ui.commands.saveprofileapplication"
               icon="icons/save_edit.gif"
               label="Save Profile Application"
               style="push"
               tooltip="Save Profile Application">
         </command>
         <command
               commandId="org.modelversioning.emfprofile.application.registry.ui.commands.saveallprofileapplications"
               icon="icons/saveall_edit.gif"
               label="Save All Profile Applications"
               style="push"
               tooltip="Save All Profile Applications">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.modelversioning.emfprofile.application.registry.ui.views.EMFProfileApplicationsView">
         <separator
               name="org.modelversioning.emfprofile.application.registry.ui.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.modelversioning.emfprofile.application.registry.ui.commands.removestereotypeapplicationornestedclass"
               label="Remove"
               style="push"
               tooltip="Remove">
         </command>
         <command
               commandId="org.modelversioning.emfprofile.application.registry.ui.commands.showpropertiesview"
               label="Properties"
               style="push"
               tooltip="Properties">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.modelversioning.emfprofile.application.registry.ui.commands.handlers.ApplyProfileHandler"
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.applyprofile">
         <enabledWhen>
            <with
                  variable="org.modelversioning.emfprofile.application.registry.ui.commands.sourceprovider.active">
               <equals
                     value="ENABLED">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.modelversioning.emfprofile.application.registry.ui.commands.handlers.LoadProfileApplicationHandler"
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.loadprofileapplication">
         <enabledWhen>
            <with
                  variable="org.modelversioning.emfprofile.application.registry.ui.commands.sourceprovider.active">
               <equals
                     value="ENABLED">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.modelversioning.emfprofile.application.registry.ui.commands.handlers.UnloadProfileApplicationHandler"
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.unloadprofileapplication">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="org.modelversioning.emfprofile.application.registry.ProfileApplicationDecorator">
                  </instanceof>
               </iterate>
               <count
                     value="1">
               </count>
            </with></enabledWhen>
      </handler>
      <handler
            class="org.modelversioning.emfprofile.application.registry.ui.commands.handlers.StereotypeApplicationsOnSelectedElementHandler"
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.stereotypeapplicationsonelement">
         <enabledWhen>
            <with
                  variable="org.modelversioning.emfprofile.application.registry.ui.commands.sourceprovider.active">
               <equals
                     value="ENABLED">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.modelversioning.emfprofile.application.registry.ui.commands.handlers.SaveProfileApplicationHandler"
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.saveprofileapplication">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <and>
                     <instanceof
                           value="org.modelversioning.emfprofile.application.registry.ProfileApplicationDecorator">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.modelversioning.emfprofile.application.registry.ui.propertytester.profileapplicationisdirty">
                     </test>
                  </and>
               </iterate>
               <count
                     value="1">
               </count>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.modelversioning.emfprofile.application.registry.ui.commands.handlers.SaveAllProfileApplicationsHandler"
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.saveallprofileapplications">
         <enabledWhen>
            <with
                  variable="org.modelversioning.emfprofile.application.registry.ui.commands.sourceprovider.active">
               <equals
                     value="ENABLED">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.modelversioning.emfprofile.application.registry.ui.commands.handlers.RemoveStereotypeApplicationOrNestedClassHandler"
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.removestereotypeapplicationornestedclass">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <instanceof
                        value="org.eclipse.emf.ecore.EObject">
                  </instanceof>
                  <not>
                     <instanceof
                           value="org.modelversioning.emfprofile.application.registry.ProfileApplicationDecorator">
                     </instanceof>
                  </not>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.modelversioning.emfprofile.application.registry.ui.commands.handlers.ShowPropertiesViewHandler"
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.showpropertiesview">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.removestereotypeapplicationornestedclass"
            contextId="org.modelversioning.emfprofile.application.registry.ui.keybindingcontext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="DEL">
      </key>
      <key
            commandId="org.modelversioning.emfprofile.application.registry.ui.commands.showpropertiesview"
            contextId="org.modelversioning.emfprofile.application.registry.ui.keybindingcontext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="ALT+ENTER">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="org.modelversioning.emfprofile.application.registry.ui.keybindingcontext"
            name="Keybinding context for EMF Profile Application UI Plug-in"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.modelversioning.emfprofile.application.registry.ui.propertytester.CheckIfProfileApplicationIsDirty"
            id="org.modelversioning.emfprofile.application.registry.ui.propertytester.profileapplicationisdirty"
            namespace="org.modelversioning.emfprofile.application.registry.ui.propertytester"
            properties="profileapplicationisdirty"
            type="org.modelversioning.emfprofile.application.registry.ProfileApplicationDecorator">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="org.modelversioning.emfprofile.application.registry.ui.commands.sourceprovider.ToolbarCommandEnabledState">
         <variable
               name="org.modelversioning.emfprofile.application.registry.ui.commands.sourceprovider.active"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
