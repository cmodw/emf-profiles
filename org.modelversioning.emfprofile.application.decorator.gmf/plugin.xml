<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.modelversioning.emfprofile.application.registry.ui.extensionpoint.decorator">
      <decorator
            class="org.modelversioning.emfprofile.application.decorator.gmf.EMFProfileApplicationDecoratorImpl">
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.modelversioning.emfprofile.application.decorator.gmf.commands.ApplyStereotype"
            name="Apply Stereotype">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.gmf.runtime.diagram.ui.DiagramEditorContextMenu">
         <command
               commandId="org.modelversioning.emfprofile.application.decorator.gmf.commands.ApplyStereotype"
               label="Apply Stereotype"
               style="push"
               tooltip="Apply Stereotype">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.modelversioning.emfprofile.application.decorator.gmf.commands.handlers.ApplyStereotypeHandler"
            commandId="org.modelversioning.emfprofile.application.decorator.gmf.commands.ApplyStereotype">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <and>
                     <instanceof
                           value="org.eclipse.gef.EditPart">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.modelversioning.emfprofile.application.decorator.gmf.propertyTester.selectionContainsModel">
                     </test>
                  </and>
               </iterate>
               <count
                     value="1">
               </count>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.modelversioning.emfprofile.application.decorator.gmf.propertytester.SelectionContainsModelElement"
            id="org.modelversioning.emfprofile.application.decorator.gmf.propertyTester.selectionContainsModel"
            namespace="org.modelversioning.emfprofile.application.decorator.gmf.propertyTester"
            properties="selectionContainsModel"
            type="org.eclipse.gef.EditPart">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.gmf.runtime.diagram.ui.decoratorProviders">
      <decoratorProvider
            class="org.modelversioning.emfprofile.application.decorator.gmf.decoration.provider.GMFProfileDecoratorProvider">
         <Priority
               name="High">
         </Priority>
      </decoratorProvider>
   </extension>

</plugin>
